                                <img src="~/Content/@ViewBag.EvDest.NombreImagen" style="width:540px; height:380px" ; />
                                <div class="info_inner">
                                    
                                    <h3>
                                        <a href="#">
                                            Evento Destacado: <br>
                                            @ViewBag.EvDest.Titulo
                                        </a>
                                    </h3>
                                    <div class="date_catagory d-flex align-items-center justify-content-between">
                                        <span>@ViewBag.EvDest.Fecha</span>
                                        <a href="@Url.Action("DetalleEvento", "Home", new { IdEvento = ViewBag.EvDest.IdEvento })" class="catagory">Más información</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
