        <div class="photography_slider_area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="photoslider_active owl-carousel">
                            @foreach (TipoEvento TE in ViewBag.ListaTipo)
                            {
                            <div class="single_photography">
                                <img src="img/photography/single-1.jpg" alt="">
                                <div class="photo_title">
                                    <a href='@Url.Action("ListadoEventos", "Home", new { IdTipoEvento = TE.IdTipoEvento })'> @TE.Nombre </a>
                                </div>
                            </div>
                            }

                        </div>
